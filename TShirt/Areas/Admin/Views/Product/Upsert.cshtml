@model Product

<form method="post" asp-action="Upsert">
   
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Update Insert Product</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="TshirtTitle" ></label>
            <input asp-for="TshirtTitle" class="form-control" />
            <span asp-validation-for="TshirtTitle" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description" ></label>
            <textarea asp-for="Description" rows="3" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ProductId" ></label>
            <input asp-for="ProductId" class="form-control" />
            <span asp-validation-for="ProductId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Designer" ></label>
            <input asp-for="Designer" class="form-control" />
            <span asp-validation-for="Designer" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ListPrice" ></label>
            <input asp-for="ListPrice" class="form-control" />
            <span asp-validation-for="ListPrice" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="MainPrice" ></label>
            <input asp-for="MainPrice" class="form-control" />
            <span asp-validation-for="MainPrice" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Price50Items" ></label>
            <input asp-for="Price50Items" class="form-control" />
            <span asp-validation-for="Price50Items" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Price100Items" ></label>
            <input asp-for="Price100Items" class="form-control" />
            <span asp-validation-for="Price100Items" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary style="width:150px">Update</button>
        @*We don't have which Action Method it should submit too below - If no name provided, it will use Get, so here Edit Function in the controller as default which post back info. 
        Here we explicitly mention this in asp-action*@
        <a asp-controller="DesignType" asp-action="Index" class="btn btn-secondary style="width:150px">Back to list</a>

    </div>

</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
     }
}

